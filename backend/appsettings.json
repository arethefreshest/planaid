{
  "ServiceUrls": {
    "Local": {
      "PythonServiceUrl": "http://localhost:8000",
      "NerServiceUrl": "http://localhost:8001"
    },
    "Docker": {
      "PythonServiceUrl": "http://python_service:8000",
      "NerServiceUrl": "http://ner_service:8001"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "Path": "logs/backend.log",
      "MaxFileSizeInMB": 10,
      "MaxFileCount": 5
    }
  },
  "Metrics": {
    "Directory": "metrics",
    "RetentionDays": 30
  },
  "AllowedHosts": "*"
}
